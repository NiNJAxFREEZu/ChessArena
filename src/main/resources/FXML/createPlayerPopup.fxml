<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="createPlayerPopup" prefHeight="396.0" prefWidth="373.0"
      xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.GUI.CreatePlayerController">
   <children>
      <AnchorPane prefHeight="392.0" prefWidth="400.0">
         <children>
            <Label layoutX="110.0" layoutY="14.0" text="New player">
               <font>
                  <Font size="24.0"/>
               </font>
            </Label>
            <Separator layoutY="48.0" prefHeight="3.0" prefWidth="340.0"/>
            <TextField fx:id="nameText" alignment="CENTER" layoutX="96.0" layoutY="89.0" text="Name"/>
            <TextField fx:id="surnameText" alignment="CENTER" layoutX="96.0" layoutY="119.0" text="Surname"/>
            <TextField fx:id="licenseIdText" alignment="CENTER" layoutX="96.0" layoutY="149.0" text="License ID"/>
            <TextField fx:id="genderField" alignment="CENTER" layoutX="96.0" layoutY="179.0" text="Gender (Sex)"/>
            <TextField fx:id="clubText" alignment="CENTER" layoutX="96.0" layoutY="209.0" text="Club"/>
            <TextField fx:id="titleText" alignment="CENTER" layoutX="96.0" layoutY="239.0" text="Title"/>
            <Button fx:id="cancel" layoutX="14.0" layoutY="325.0" mnemonicParsing="false" onAction="#cancel"
                    prefHeight="43.0" prefWidth="78.0" text="Close"/>
            <Button fx:id="createPlayerBtn" layoutX="248.0" layoutY="325.0" mnemonicParsing="false"
                    onAction="#createPlayer" prefHeight="43.0" prefWidth="78.0" text="Create"/>
            <Label fx:id="failLabel" layoutX="106.0" layoutY="294.0" prefHeight="17.0" prefWidth="130.0"
                   text="Failed to create player!" textAlignment="CENTER" textFill="RED" visible="false"/>
            <Label fx:id="successLabel" layoutX="126.0" layoutY="294.0" prefHeight="17.0" prefWidth="88.0"
                   text="Created player!" textAlignment="CENTER" textFill="#15ff00" visible="false"/>
         </children>
      </AnchorPane>
   </children>
</VBox>
